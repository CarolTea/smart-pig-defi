# Production Environment Variables
# Copy this file to .env and fill in the actual values

# Database Configuration
DATABASE_URL=postgresql://smart_pig_user:your_secure_password@postgres:5432/smart_pig_db
POSTGRES_USER=smart_pig_user
POSTGRES_PASSWORD=your_secure_password
POSTGRES_DB=smart_pig_db

# Backend Configuration
NODE_ENV=production
PORT=3000
JWT_SECRET=your_super_secure_jwt_secret_key_here
JWT_EXPIRES_IN=24h

# Stellar Network Configuration
STELLAR_NETWORK=public
STELLAR_HORIZON_URL=https://horizon.stellar.org
STELLAR_SECRET_KEY=your_stellar_secret_key_here

# Redis Configuration
REDIS_URL=redis://redis:6379
REDIS_HOST=redis
REDIS_PORT=6379

# API Configuration
API_RATE_LIMIT=100
API_RATE_WINDOW=900000

# Security
CORS_ORIGIN=https://smartpig.com
HELMET_ENABLED=true

# Monitoring
LOG_LEVEL=info
ENABLE_LOGGING=true

# Health Check
HEALTH_CHECK_ENABLED=true

# Frontend Configuration (for build time)
VITE_API_URL=https://api.smartpig.com
VITE_STELLAR_NETWORK=public
VITE_HORIZON_URL=https://horizon.stellar.org